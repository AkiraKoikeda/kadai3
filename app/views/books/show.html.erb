<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
   <h1>User info</h1>
   <%= image_tag @user.get_profile_image(100,100) %>
 <table class="table table">
   <tbody>
   <tr>
 <th>name</th>
   <th><%= @user.name %></th>
   </tr>
   <tr>
 <th>introduction</th>
   <th><%= @user.introduction %></th>
   </tr>
   </tbody>
 </table>

<div class="row">
    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<h1>New book</h1>
<%= form_with model: @books do |f| %>
  <p>Title</p>
    <%= f.text_field :title, style: "width:100%" %>
  <p>Opinion</p>
    <%= f.text_area :body, style: "width:100%" %>
  <p><%= f.submit 'Create Book', class: "btn btn-success" %></p>
<% end %>
    </div>

    <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class= "table talble">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <%= @book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </td>
      <td>
        <%= @book.body %>
        <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
</div>
    </div>
  </div>
</div>
