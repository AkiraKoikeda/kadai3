<%= flash[:notice] %>
<%= render 'books/list', book: @book %>


<h1>Books</h1>
<table>
<thead>
<tr>
    <th>Title</th>
    <th>Opinion</th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>

<tr>
 <td><%= image_tag book.user.get_profile_image(100,100) %></td>
 <td>
  <%= link_to book_path(book.id) do %>
   <%= book.book_name %>
  <% end %>
 </td>

 <td><%= book.caption %></td>
</tr>
<% end %>
</tbody>
</table>


